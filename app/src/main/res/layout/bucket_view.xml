<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center">>

    <View
        android:id="@+id/bucket_background"
        android:layout_width="@dimen/bucket_corner_disabled"
        android:layout_height="@dimen/bucket_corner_disabled"
        android:background="@drawable/bucket_background"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />

    <View
        android:id="@+id/bucket_corner_outline"
        android:layout_width="@dimen/bucket_corner_disabled"
        android:layout_height="@dimen/bucket_corner_disabled"
        android:background="@drawable/bucket_colored_outline"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/post_bucket_image"
        android:layout_width="@dimen/bucket_size_image"
        android:layout_height="@dimen/bucket_size_image"
        android:src="@drawable/ic_fab_trash"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        />

</merge>