<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="@dimen/bottom_bar_item_width"
                                             android:layout_height="@dimen/bottom_bar_item_height"
                                             >


    <android.support.v7.widget.CardView
        android:id="@+id/bottom_bar_card"
        android:layout_width="@dimen/bottom_bar_square_border"
        android:layout_height="@dimen/bottom_bar_square_border"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/square_corner"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <View
            android:id="@+id/bottom_square_border"
            android:background="@color/green_square_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/bottom_bar_square"
            android:layout_width="@dimen/bottom_bar_square_border"
            android:layout_height="@dimen/bottom_bar_square_border"
            />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>