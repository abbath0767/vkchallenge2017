<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/popup_card_margin">

    <com.ng.vkchallenge2017.ui.view.SquaredCardView
        android:id="@+id/popup_square_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/square_corner"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/popup_border_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/square_checked_corners_inner"/>

        <View
            android:id="@+id/popup_border_outher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/square_checked_corners_outher"/>

        <ImageView
            android:id="@+id/popup_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="center"
            />

    </com.ng.vkchallenge2017.ui.view.SquaredCardView>

</android.support.constraint.ConstraintLayout>