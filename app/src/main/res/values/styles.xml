<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryDark">@color/cool_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:radius">@dimen/button_default_padding</item>-->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageButtonToolbar" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/toolbar_button_border_size</item>
        <item name="android:layout_height">@dimen/toolbar_button_border_size</item>
        <item name="android:layout_margin">@dimen/toolbar_button_border_margin</item>
    </style>

    <style name="TopTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StickerDialogSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/StickerDialogAnimation</item>
    </style>


    <style name="StickerDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/sticker_popup_show</item>
        <item name="android:windowExitAnimation">@anim/sticker_popup_hide</item>
    </style>

    <style name="LoadingDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/cool_blue</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/loading_accent_color</item>
    </style>
</resources>
