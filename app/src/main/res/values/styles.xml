<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cornflower_blue</item>
        <item name="colorPrimaryDark">@color/cool_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/white</item>
        <!--<item name="android:radius">@dimen/button_default_padding</item>-->
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ImageButtonToolbar" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/toolbar_button_border_size</item>
        <item name="android:layout_height">@dimen/toolbar_button_border_size</item>
        <item name="android:layout_margin">@dimen/toolbar_button_border_margin</item>
    </style>

    <style name="TopTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
